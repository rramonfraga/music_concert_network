<h2> Let's Rock with <%= @concert.band %> </h2>

<p> Venue: <%= @concert.venue%> </p>

<p> City: <%= @concert.city%> </p>

<p> Date: <%= @concert.date%> </p>

<p> Price: <%= @concert.price%> $</p>

<p> Description: <%= @concert.description%> </p>

<section>
  <% @comments.each do |comment| %>
    <div class="comment_box">
      <p> <%= comment.description %> </p>
      <p> <%= comment.user %> - <%= comment.updated_at%> </p>
    </div>
  <% end %>
</section>

<section>
    <%= form_for [@concert, @comment] do |f| %>
      <%= f.label :description %>
      <%= f.text_field :description %>
      <br>
      <%= f.label :user %>
      <%= f.text_field :user %>
      <br>
      <%= f.submit 'Publish' %>

    <% end %>
</section>
