<section>
  <h2> Concerts today! </h2>
  <ul>
    <% @concerts_today.each do |concert| %>
      <li><%= link_to(concert.band, concert_path(concert.id)) %> </li>
      <li> Where: <%= concert.venue %>, <%= concert.city.upcase %></li>
      <li> Price: <%= concert.price %> $ </li>
      <li> Description: <%= concert.description %> $ </li>

    <% end %>
  </ul>
</section>
<section>
  <h2> Concerts this month! </h2>
  <ul>
    <% @concerts_this_month.each do |concert| %>
      <li><%= link_to(concert.band, concert_path(concert.id)) %>
      <%= concert.description %> </li>
    <% end %>
  </ul>
</section>